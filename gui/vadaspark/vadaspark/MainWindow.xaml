<Window x:Class="vadaspark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vadaspark"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFFBEED8">
        <Label Content="Neve:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,95,0,0" FontSize="14" FontStyle="Italic" Foreground="#FF0243BB"/>
        <Label Content="Fajtája:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,126,0,0" FontSize="14" FontStyle="Italic" Foreground="#FF0243BB"/>
        <Label Content="Születési Dátum:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,157,0,0" FontSize="14" FontStyle="Italic" Foreground="#FF0243BB"/>
        <Label Content="Neme:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,221,0,0" FontSize="14" FontStyle="Italic" Foreground="#FF0243BB"/>
        <RadioButton x:Name="him" Content="Hím" HorizontalAlignment="Left" Margin="185,227,0,0" VerticalAlignment="Top" Foreground="#FF0243BB" IsChecked="True"/>
        <RadioButton x:Name="no" Content="Nőstény" HorizontalAlignment="Left" Margin="260,227,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.688,0.459" Foreground="#FF0243BB"/>
        <TextBox x:Name="faj" HorizontalAlignment="Left" Height="26" Margin="185,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138"/>
        <TextBox x:Name="nev" HorizontalAlignment="Left" Height="26" Margin="185,95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138"/>
        <ListBox x:Name="allatok" HorizontalAlignment="Left" Height="216" VerticalAlignment="Top" Width="315" Margin="403,113,0,0"/>
        <Label Content="Születési Helye:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,188,0,0" FontSize="14" FontStyle="Italic" Foreground="#FF0243BB"/>
        <TextBox x:Name="hely" HorizontalAlignment="Left" Height="26" Margin="185,188,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138"/>
        <Label Content="Kedvenc Étele:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,255,0,0" FontSize="14" FontStyle="Italic" Foreground="#FF0243BB"/>
        <TextBox x:Name="etel" HorizontalAlignment="Left" Height="26" Margin="185,255,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138"/>
        <Label Content="Állatok Adatai" HorizontalAlignment="Left" VerticalAlignment="Top" Height="59" Width="792" FontSize="36" FontWeight="Bold" HorizontalContentAlignment="Center" Margin="0,10,0,0" Foreground="#FF0243BB"/>
        <Label Content="Utodók száma:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,286,0,0" FontSize="14" FontStyle="Italic" Foreground="#FF0243BB"/>
        <TextBox x:Name="utod" HorizontalAlignment="Left" Height="26" Margin="185,286,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138"/>
        <Label Content="Állatok" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="403,79,0,0" FontSize="18" FontStyle="Italic" Foreground="#FF0243BB" FontWeight="Bold"/>
        <Button x:Name="hozzadas" Content="Állat Hozzáadása" HorizontalAlignment="Left" VerticalAlignment="Top" Width="287" Margin="36,340,0,0" Height="38" BorderBrush="#FF0243BB" Foreground="#FF0243BB" Click="hozzaadas_Click"/>
        <Label Content="Állatok száma:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="580,82,0,0" FontSize="16" Foreground="#FF0243BB" Width="113"/>
        <Button x:Name="letoltes" Content="Letöltés" HorizontalAlignment="Left" VerticalAlignment="Top" Width="96" Margin="403,340,0,0" Height="38" BorderBrush="#FF0243BB" Foreground="#FF0243BB" Click="letoltes_Click"/>
        <Button x:Name="torles" Content="Állat törlése" HorizontalAlignment="Left" VerticalAlignment="Top" Width="108" Margin="504,340,0,0" Height="38" BorderBrush="#FF0243BB" Foreground="#FF0243BB" Click="torles_Click"/>
        <Button x:Name="kilepes" Content="Kilépés" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Margin="10,10,0,0" Height="29" BorderBrush="#FF0243BB" Foreground="#FF0243BB" Click="kilepes_Click"/>
        <Label x:Name="szam" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="698,81,0,0" FontSize="16" Foreground="#FF0243BB" Width="45" Height="32"/>
        <Button x:Name="betoltes" Content="Betöltés" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" Margin="617,340,0,0" Height="38" BorderBrush="#FF0243BB" Foreground="#FF0243BB" Click="betoltes_Click"/>
        <DatePicker x:Name="datum" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="185,159,0,0" Width="138"/>

    </Grid>
</Window>
